{
    "name": "andreasostheimer/deepblogger",
    "description": "Ein WordPress-Plugin zur automatischen Generierung von Blog-BeitrÃ¤gen mit ChatGPT",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Andreas Ostheimer",
            "email": "info@andreasostheimer.de"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "yoast/phpunit-polyfills": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "DeepBlogger\\": "includes/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress",
        "phpcbf": "phpcbf --standard=WordPress"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
